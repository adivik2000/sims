<p>
<% if @intervention.active? && probe_assignment.id == @intervention_probe_assignment.id %>
  <%#= display_assessment_links(probe_assignment) %>
  <% fields_for 'intervention[intervention_probe_assignment][new_probes][]', probe_assignment.probes.build  do |paf| %>
    <div id="new_probe_forms">
      <%= render :partial =>"interventions/probes/form", :locals=>{:form=>paf, :probe_assignment =>probe_assignment} %>
    </div>
    <%= link_to_function 'Add Additional Score' do |page|
        page.insert_html(:bottom, 'new_probe_forms', :partial =>"interventions/probes/form", :locals=>{:form=>paf, :probe_assignment =>probe_assignment})
      end
  %>

  <%= link_to_remote 'Preview Graph', :url => preview_graph_intervention_probe_assignment_path(:intervention_id=>probe_assignment.intervention_id, :id=>probe_assignment.id, :count => probe_assignment_counter), :method => :get, :update => {:success => "graph_#{probe_assignment_counter}"}, :with => "new_probe_scores()"  unless probe_assignment.new_record?%>

<% end %>
<% else %>
  <%= probe_assignment.title %>
<% end %>


<% unless probe_assignment.probes.blank? or ( probe_assignment.probes.size == 1 && probe_assignment.probes.first.new_record?) %>

<div class="fake_label">&nbsp;</div>
<table caption="Student Score Summary">
  <thead>
    <tr>
      <th>Score</th>
      <th>Date Administered</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= render :partial=>"interventions/probes/probe", :collection=>probe_assignment.probes %>
  </tbody>
</table>

  <%= link_to_function("Hide Graph", nil, :id => "more_link_#{probe_assignment_counter}") do |page|
      page.visual_effect :toggle_blind, "graph_#{probe_assignment_counter}"
      page["more_link_#{probe_assignment_counter}"].replace_html "Show/Hide Graph"
      page.show "spinner#{probe_assignment_counter}"
      page.delay(1.5) do
       page.hide "spinner#{probe_assignment_counter}"
      end  
    end %><%= spinner("#{probe_assignment_counter}") %>
          
 
  </p>

  <div id='<%= "graph_#{probe_assignment_counter}" %>'>
  
    <%=  probe_graph(probe_assignment,probe_assignment_counter) %>

    </div>
  
  <% else %>
  <div id='<%= "graph_#{probe_assignment_counter}" %>'>
  

  </div>

  <% end %>

