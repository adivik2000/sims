<% readonly = false if readonly.nil? %>
    <br class="brclear" />
  <p>
    <%= label :naught,:probe_definition_id, "Assign Progress Monitor" %>
    <% if readonly %>
      <%= @intervention.assigned_probes %>
    <% elsif @recommended_monitors.size == 1 %>
      <%= @intervention_probe_assignment.title %>
    <% else %>
      <%= collection_select(:naught,:probe_definition_id, @recommended_monitors, :probe_definition_id, :title,{},{:onchange=>remote_function(:update=>'intervention_probe_assignment', :url=> ajax_probe_assignment_interventions_url, :method=>:get, :with=>"'id=' + $('naught_probe_definition_id').value", :before =>"$('spinnerassign_progress').show()",:success => "$('spinnerassign_progress').hide();"
), :class => "fixed_width"}) %>
    <%= spinner("assign_progress") %>
    <% end %>
  </p>
    <br class="brclear" />
  <div id="intervention_probe_assignment">
    <%= render :partial => 'interventions/intervention_probe_assignment_detail', :locals => {:readonly => readonly } %>
  </div>
