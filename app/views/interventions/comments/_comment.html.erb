<% readonly=false %>
<% content_tag_for :div, comment do %> 
  <div class="fake_label">&nbsp;</div>
  <%=h comment.comment %> by <%=h comment.user%> on <%= h comment.updated_at.to_date %>
  <% if current_user == comment.user and !readonly %>
    <%= link_to 'Edit', edit_intervention_comment_path(@intervention,comment) ,{:target=>"_blank"}%>
    <%= link_to_remote_degrades 'Delete', :url=>intervention_comment_path(@intervention,comment), 
      :confirm => 'Are you sure you want to remove this comment?', :method => :delete %>
  <% end %>
<% end %>

