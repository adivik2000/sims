<%content_tag_for :tr, goal_definition do %>
  <td align="left"><%= move_up_down_buttons goal_definition %></td>
  <td align="center"> 
  <%= link_to 'Show', intervention_builder_goal_path(goal_definition) %> <br />
  <%= link_to 'Edit', edit_intervention_builder_goal_path(goal_definition) %> <br />

   <%= link_to 'Disable', disable_intervention_builder_goal_path(goal_definition), :confirm => 'Are you sure? This is similar to deletion, except any existing interventions will retain their info. ', :method => :put %>  <br /> 
  <%= link_to 'Destroy', intervention_builder_goal_path(goal_definition), :confirm => 'Are you sure?  If there is anything existing assigned, considering disabling instead.', :method => :delete %> 
  <br />
  <%= link_to 'See Objectives', intervention_builder_objectives_path(goal_definition)%>
  </td>

  <td><%=h goal_definition.title %></td>
  <td><%=h goal_definition.description %></td>
  <td><%= h goal_definition.updated_at %> </td>
<% end %>
