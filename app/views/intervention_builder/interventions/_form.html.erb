<div class="new_form">
  <p>
    <%= form.label :title %>
    <%= form.text_area :title %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>

  <%= form.hidden_field :custom %>

  <p>
    <%= form.label :tier_id, 'Tier' %>
    <%= form.collection_select(:tier_id, Tier.all_cache, :id, :title) %>
  </p>

  <p>
    <%= form.label :rec_mon_preface, "Preface for choosing recommended monitor" %>
    <%= form.text_field :rec_mon_preface %>
  </p>

  <br class='brclear' />

  <p>
   <%= form.label :time_length_num, 'Time length' %>
   <%= form.text_field :time_length_num %>
   <%= form.collection_select(:time_length_id,TimeLength.all_cache,:id,:title) %>
  </p>


  <p>
    <%= form.label :frequency_multipler, "Frequency" %>
    <%=form.text_field :frequency_multiplier%> Time(s) 
    <%=form.collection_select(:frequency_id,Frequency.all_cache,:id,:title) %>  
  </p>

  <p>
    <div class="fake_label"><%=form.check_box(:district_quicklist)%></div>
    <%= form.label :district_quicklist ,"District Quicklist",{:class =>"checkbox_label"} %>
  </p>

  <br class='brclear' />
 
  <div id = "assets" >
    Attach a file or link <br />
    <%= render :partial => 'assets/asset', :collection => @intervention_definition.assets , :locals => {:parent => "intervention_definition"}%>
  </div>

  <p>
    <%= add_asset_link "Add a file or link", "intervention_definition" %>
  </p>

  <p>
    <%= submit_tag submit_name , :class =>"submit"%>
  </p>
</div>
