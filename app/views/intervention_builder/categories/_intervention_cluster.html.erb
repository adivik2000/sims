<%content_tag_for :tr, intervention_cluster do %>
  <td><%=move_up_down_buttons intervention_cluster%> </td>
  <td align="center">
  <%= link_to 'Show', intervention_builder_category_path(@goal_definition,@objective_definition,intervention_cluster) %><br />
  <%= link_to 'Edit', edit_intervention_builder_category_path(@goal_definition,@objective_definition,intervention_cluster) %><br />
  <%= link_to 'Disable', disable_intervention_builder_category_path(@goal_definition,@objective_definition,intervention_cluster), :confirm => 'Are you sure? This is similar to deletion, except any existing interventions will retain their info. ', :method => :put %>  <br />

  <%= link_to 'Destroy', intervention_builder_category_path(@goal_definition,@objective_definition,intervention_cluster), :confirm => 'Are you sure?', :method => :delete %><br />
  <%= link_to 'See Interventions', intervention_builder_interventions_path(@goal_definition,@objective_definition,intervention_cluster)%>
</td>
 <td><%=h intervention_cluster.title %></td>
 <td><%=h intervention_cluster.description.to_s %></td>
 <td><%=h intervention_cluster.updated_at %></td>
<% end %>
