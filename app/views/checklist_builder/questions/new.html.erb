<h1>New Question Definition</h1>
<%= error_messages_for :question_definition %>
<%- form_for :question_definition, :url => question_definitions_path do |f| -%>
  <%= render :partial => 'form', :locals => { :f => f, :question_definition => @question_definition } %>
  <p>
    <%= submit_tag "Create" %>
    <%= spell_check_submit %>
  </p>
<%- end -%>
<%= render :partial => 'spell_check/spelling'  %>
<%= link_to 'Back', checklist_definition_path(@checklist_definition) %>
