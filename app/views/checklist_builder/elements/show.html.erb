<h1>Showing Element Definition <%= @element_definition.position %> for Question Definition <%= @question_definition.position %></h1>
<p>     
  <table>
    <tr>
      <td colspan="2">Rank:</td>
      <td colspan="2"><%=h @element_definition.position %></td>
    </tr>
    <tr> 
      <td colspan="2">Text:</td>
      <td colspan="2"><%=h @element_definition.text %></td>
    </tr>
    <tr> 
      <td colspan="2">Element Type:</td>
      <td colspan="2"><%=h ElementDefinition.kinds_of_elements[@element_definition.kind] %></td>
    </tr>
    <tr> 
      <td colspan="2">Creation Date:</td>
      <td colspan="2"><%=h @element_definition.created_at.to_date.to_s(:long) %></td>
    </tr>
    <tr> 
      <td colspan="2">Date of Last Update:</td>
      <td colspan="2"><%=h @element_definition.updated_at.to_date.to_s(:long) %></td>
    </tr>
    <tr>
      <td colspan="4">
        <%= link_to 'Edit', edit_checklist_builder_element_path(@checklist_definition, @question_definition, @element_definition) %> |
        <%= link_to 'Back', checklist_builder_checklist_path(@checklist_definition) %>
      </td>
    </tr>
  </table>
</p>
