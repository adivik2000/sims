<a name="<%= dom_id(element_definition, "edit_errors_anchor") %>">
  <div id="<%= dom_id(element_definition, "edit_errors") %>" style="display:none"></div>
</a>
<%- remote_form_for :element_definition, :url => checklist_builder_element_path(element_definition.checklist_definition, element_definition.question_definition, element_definition), :html => { :method => :put } do |f| -%>
  <%= render :partial => 'form', :locals => { :f => f, :element_definition => element_definition } %>
  <p>
    <%= submit_tag "Update" %> | 
    <%= link_to_function "Cancel", nil do |page|
      page.remove_content dom_id(element_definition, "edit")
      page.change_link dom_id(element_definition, "edit_link"), "Edit"
    end %>
  </p>
<%- end -%>
