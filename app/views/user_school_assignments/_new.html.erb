<% remote_form_for(@user_school_assignment) do |f| %>
  <%= f.error_messages %>
  <p> <%= f.label :school_id, "School" %>
  <%= f.collection_select(:school_id, @schools, :id, :name) %>
  <%= f.hidden_field :user_id %>
  </p>
  <p> <%= f.label :admin %> <%=f.check_box :admin %> </p>
  <p>
  <%= f.submit "Add School" %> (Remember to hit the Create or Update button on the outer form to save the record.)
  
  </p>
<% end %>

