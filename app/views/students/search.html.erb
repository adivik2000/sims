<% form_tag({}, {:name => "student_search_form"}) do %>
  <div id='table'>
		<label for="search_criteria_grade">Grade</label>
    <%= select(:search_criteria,:grade,@grades) %><br/>
    <%= observe_field 'search_criteria_grade', :url => grade_search_students_path ,:with=>'grade'%>


		<label for="search_criteria_user_id">Group Member</label>
                <%= collection_select(:search_criteria,:user_id,@users,:id,:fullname ) %><br/>

    <%= observe_field 'search_criteria_user_id', :url => member_search_students_path, 
:with=>"'user=' +escape(value) + '&grade=' + escape($('search_criteria_grade').value)" %>

		<label for="search_criteria_group_id">Student Group</label>
                <%= collection_select(:search_criteria,:group_id,@groups,:id,:title) %><br/>



		<label for="search_criteria_last_name">Last Name</label>
                <%= text_field(:search_criteria, :last_name) %> 
                 <%=help_popup("Put in the beginning of the last name you want to search.   This can now be combined with the other search options.")  %>
                <br/>

		Select Student(s) by
		<%= radio_button_tag('search_criteria[search_type]', :list_all, :checked => true) %><label for="search_criteria_search_type_list_all">List all students</label><br />
                <%= radio_button_tag('search_criteria[search_type]', :flagged_intervention) %><label for="search_criteria_search_type_flagged_intervention">List only students flagged for intervention</label><%= flag_select  %> 
                 <%=help_popup("You can limit your selection by checking the flags you want.     Clicking Ignore or Custom will limit you to ignored/custom flags, clicking the other flags will only show those that are checked.")  %>
                <br />
		<%= radio_button_tag('search_criteria[search_type]', :active_intervention) %><label for="search_criteria_search_type_active_intervention">List only students in an active intervention</label><%= active_intervention_select %><br />
		<%= radio_button_tag('search_criteria[search_type]', :no_intervention) %><label for="search_criteria_search_type_no_intervention">List only students not in an active intervention</label>
  </div>
  <%= submit_tag "Search for Students", :name => 'search' %>
<% end %>
