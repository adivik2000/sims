<% require 'fastercsv' -%>
personID,referral_request,main_concerns,interventions_tried,family_involvement,external_factors,date
<% @students.each do |student| -%>
<% if student["id"] -%>
<% answers = Hash[*ActiveRecord::Base.connection.select_rows("select position, ra.text from recommendation_answers ra inner join recommendation_answer_definitions rad on ra.recommendation_answer_definition_id = rad.id  and ra.recommendation_id where ra.recommendation_id = #{student["id"]}").flatten] %>
<% answer1 = answers["1"] %>
<% answer2 = answers["2"] %>
<% answer3 = answers["3"] %>
<% answer4 = answers["4"] %>
<%=[student["id_district"],"Y",answer1,answer2,answer3,answer4, student["created_at"].to_date].to_csv-%> 
<% else -%>
<%=student["id_district"] -%>,"N",,,,
<% end -%>
<% end -%>
