<p>
  <b>Author:</b>
  <%=h comment.user %>
  <br />
  <b>Date Updated:</b>
  <%= comment.updated_at.to_s(:long) %> 
  <br />
  <b>Note:</b>
  <%=h comment.body %>

<% if current_user.id == comment.user_id %>
  <br />
      <%= link_to 'Edit', edit_student_comment_path(comment) %>
      <%= link_to 'Destroy', comment, :confirm => 'Are you sure you want to remove this note??', :method => :delete %>
<% end %>
</p>
