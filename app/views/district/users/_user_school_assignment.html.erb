<% div_for user_school_assignment.school,'assignment' do %>
  <% fields_for 'user[school_assignments][]',user_school_assignment ,:index=>nil do |school_fields| %>

  <p><%=user_school_assignment.school%> <%= content_tag :b, 'admin' if user_school_assignment.admin?%>
  <%=school_fields.hidden_field :school_id %>
  <%=school_fields.hidden_field :user_id %>
