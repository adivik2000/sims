<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Fullname</th>
  </tr>


<% for user in @users %>
  <tr id="tr_<%=user.id%>">
    <td><%= h user.username %></td>
    <td><%= h user %></td>
    <td><%= link_to 'Edit', edit_district_user_path(user) %></td>
    <td><%= link_to 'Delete', district_user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

