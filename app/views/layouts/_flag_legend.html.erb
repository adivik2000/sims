<% display_flag_legend? do %>
  <h2>Icon Legend</h2>

<div class="newsGroup">
  <table cellspacing="3" cellpadding="3">
   <tr>
      <td><%= image_tag("green-dot.gif") %></td>
      <td>
        Active Intervention
      </td>
    </tr>
    <tr>
      <td><%= image_tag("gray-dot.gif") %></td>
      <td>
        Previously Ended Intervention
      </td>
    </tr>
	<tr>
      <td><%= image_tag("I.gif") %></td>
      <td>
        Ignored: One or more flags are ignored. 
      </td>
    </tr>
	<tr>
      <td><%= image_tag("C.gif") %></td>
      <td>
        Custom Flag
      </td>
    </tr>
	<tr>
      <td><%= image_tag("comments.png") %></td>
      <td>
        Team Consultation Request
      </td>
    </tr>


    <tr>
      <td><%= image_tag("A.gif") %></td>
      <td>
        Attendance: <%=@flag_description.attendance %>
      </td>
    </tr>
    <tr>
      <td><%= image_tag("B.gif") %></td>
      <td>
       Behavior: <%=@flag_description.suspension %> 
      </td>
    </tr>
    <tr>
      <td><%= image_tag("M.gif") %></td>
      <td>
        Math: <%=@flag_description.math%>
      </td>
    </tr>
    <tr>
      <td><%= image_tag("LA.gif") %></td>
      <td>
      Language Arts: <%=@flag_description.languagearts %> 
      </td>
    </tr>

    
    <tr>
      <td><%= image_tag("lightbulb.png") %></td>
      <td>
      Talented/Gifted: <%=@flag_description.gifted %>
      </td>
    </tr>

 
	<tr><td colspan="2">Hover over the flag icon to see specific student data.</td></tr>
  </table>
  
</div>
<% end %>
