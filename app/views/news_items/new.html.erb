<h1>New News</h1>

<% form_for(@news_item) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit "Create" %>
    <%= spell_check_submit %>
  </p>
<% end %>
<%= render :partial => 'spell_check/spelling' %>

<%= link_to 'Back', news_items_path %>
